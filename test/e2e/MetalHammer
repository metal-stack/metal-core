FROM golang:1.11-stretch as builder

WORKDIR /build
ENV CGO_ENABLED=0 \
    GO111MODULE=on \
    GOOS=linux

# Install dependencies and Mage
COPY ./ ./
RUN go mod download \
 && go build -o metal-hammer

FROM scratch
LABEL maintainer FI-TS Devops <devops@f-i-ts.de>

COPY --from=builder /build/metal-hammer /

ENTRYPOINT ["/metal-hammer"]
